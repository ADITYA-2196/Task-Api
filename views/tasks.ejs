
<!DOCTYPE html>
<html>
<head><title>Tasks</title></head>
<body>
  <h1>Your Tasks</h1>
  <form action="/tasks?token=<%= token %>" method="POST">
    <input type="text" name="text" placeholder="New task" required />
    <button type="submit">Add</button>
  </form>
  <ul>
    <% tasks.forEach(task => { %>
      <li><%= task.text %>
        <form action="/tasks/delete/<%= task.id %>?token=<%= token %>" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
